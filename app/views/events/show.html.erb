<% provide(:title, "Event") %>
<h1>Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @event  do |f|%>

      <%= f.input :name, input_html: { class: 'form-control', readonly: :readonly } %>

      <%= f.input :content, input_html: { class: 'form-control', readonly: :readonly } %>

      <%= f.input :datetime, as: :datetime, input_html: { class: 'form-control', disabled: :disabled }%>

      <%= f.label :repeat, "Frequency" %>
      <%= f.select(:repeat, ['Once','Week','Day','Month','Year'], {} , { class: 'form-control', disabled: :disabled }) %>

      <%= link_to "Back to profile", current_user, class: 'form-control link-back' %>

      <% if current_user.id == @event.user_id %>

        <%= link_to "Edit event", edit_event_path(@event), class: 'form-control link-back' %>

        <%= link_to "Delete", @event, method: :delete, class: 'form-control link-back', data: { confirm: "You sure?" } %>

       <% end %>
    <% end %>
  </div>
</div>