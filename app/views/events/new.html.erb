<% provide(:title, "Event") %>
<h1>Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @event  do |f|%>

      <%= f.input :name, input_html: { class: 'form-control' } %>

      <%= f.input :content, input_html: { class: 'form-control' } %>

      <%= f.input :datetime, as: :datetime, input_html: { class: 'form-control' }%>

      <%= f.label :repeat, "Frequency" %>
      <%= f.select(:repeat, ['Once','Day','Week','Month','Year'], {} , { class: 'form-control' }) %>

      <%= f.submit "Create my event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>