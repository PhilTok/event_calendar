<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@user) do |f| %>
      <%= render 'shared/error_message' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :chat_id, "Chat it for notifications in the telegram" %>
      <p class='note'>You can get notifiaction in the telegram, you need to get your chat id from @IDBot. Search @event_calendar_bot and start it.</p>
      <%= f.text_field :chat_id, class: 'form-control', value: f.object.chat_id %>

      <%= link_to "Delete Profile", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
